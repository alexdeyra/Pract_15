<Page x:Class="Pract15.Pages.ManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:Pract15.Pages"
      Title="Управление"
      Background="{StaticResource PrimaryBackgroundBrush}">

    <Page.Resources>
        <!-- Стиль для DataGrid -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource LightGrayBrush}"/>
            <Setter Property="ColumnHeaderHeight" Value="44"/>
            <Setter Property="RowHeight" Value="40"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeColumns" Value="True"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>

            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="BorderThickness" Value="0,0,0,0"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </Setter.Value>
            </Setter>

            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource LightGrayBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#200ec0b4"/>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок действий -->
        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Margin" Value="2,0,2,0"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,0"/>
        </Style>

        <!-- Стиль для табов -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="0,0,0,3"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryBrush}"
                Padding="20"
                CornerRadius="10"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Управление магазином"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"/>
                    <TextBlock Text="Панель администратора"
                               FontSize="14"
                               Foreground="White"
                               Opacity="0.9"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Вернуться к товарам"
                        Style="{StaticResource PrimaryButton}"
                        Click="Back_Click"
                        Padding="20,10"
                        FontSize="13"/>
            </Grid>
        </Border>

        <!-- Табы -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource ModernTabControlStyle}">

            <!-- Товары -->
            <TabItem Header="Товары" Style="{StaticResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поиск -->
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Поиск товаров"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="ProductSearchTextBox"
                                         TextChanged="ProductSearchTextBox_TextChanged"
                                         Style="{StaticResource PrimaryTextBox}"
                                         materialDesign:HintAssist.Hint="По названию, категории, бренду..."
                                         FontSize="13"
                                         Padding="12,8"
                                         MaxWidth="400"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Добавить товар"
                                        Click="AddProduct_Click"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,10,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="White"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Добавить товар"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <Button Content="Обновить"
                                        Click="RefreshProducts_Click"
                                        Style="{StaticResource SecondaryButton}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Refresh"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="{StaticResource PrimaryBrush}"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Обновить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Таблица товаров -->
                    <Border Grid.Row="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Статистика -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource LightGrayBrush}"
                                    Padding="12"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <TextBlock x:Name="ProductsStatsText"
                                           Text="Загрузка данных..."/>
                            </Border>

                            <!-- DataGrid -->
                            <DataGrid Grid.Row="1"
                                      x:Name="ProductsGrid"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      AutoGeneratingColumn="ProductsGrid_AutoGeneratingColumn">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Название" 
                                                        Binding="{Binding Name}" 
                                                        Width="250"/>

                                    <DataGridTextColumn Header="Цена" 
                                                        Binding="{Binding Price, StringFormat='{}{0:C}'}" 
                                                        Width="100"/>

                                    <DataGridTextColumn Header="Остаток" 
                                                        Binding="{Binding Stock}" 
                                                        Width="80"/>

                                    <DataGridTextColumn Header="Категория" 
                                                        Binding="{Binding Category.Name}" 
                                                        Width="120"/>

                                    <DataGridTextColumn Header="Бренд" 
                                                        Binding="{Binding Brand.Name}" 
                                                        Width="120"/>

                                    <DataGridTemplateColumn Header="Действия" 
                                                            Width="160"
                                                            IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center">
                                                    <Button Content="Ред."
                                                            Tag="{Binding Id}"
                                                            Click="EditProduct_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource PrimaryBrush}"
                                                            Foreground="White">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Pencil"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Ред."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Content="Уд."
                                                            Tag="{Binding Id}"
                                                            Click="DeleteProduct_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource ErrorBrush}"
                                                            Foreground="White"
                                                            Margin="8,0,0,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Delete"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Уд."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Категории -->
            <TabItem Header="Категории" Style="{StaticResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поиск для категорий -->
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Поиск категорий"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="CategorySearchTextBox"
                                         TextChanged="CategorySearchTextBox_TextChanged"
                                         Style="{StaticResource PrimaryTextBox}"
                                         materialDesign:HintAssist.Hint="По названию категории..."
                                         FontSize="13"
                                         Padding="12,8"
                                         MaxWidth="400"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Добавить"
                                        Click="AddCategory_Click"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,10,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="White"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Добавить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <Button Content="Обновить"
                                        Click="RefreshCategories_Click"
                                        Style="{StaticResource SecondaryButton}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Refresh"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="{StaticResource PrimaryBrush}"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Обновить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Таблица категорий -->
                    <Border Grid.Row="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Статистика -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource LightGrayBrush}"
                                    Padding="12"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <TextBlock x:Name="CategoriesStatsText"
                                           Text="Загрузка данных..."/>
                            </Border>

                            <DataGrid Grid.Row="1"
                                      x:Name="CategoriesGrid"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      AutoGeneratingColumn="CategoriesGrid_AutoGeneratingColumn">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Название" 
                                                        Binding="{Binding Name}" 
                                                        Width="*"/>

                                    <DataGridTemplateColumn Header="Действия" 
                                                            Width="160"
                                                            IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center">
                                                    <Button Content="Ред."
                                                            Tag="{Binding Id}"
                                                            Click="EditCategory_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource PrimaryBrush}"
                                                            Foreground="White">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Pencil"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Ред."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Content="Уд."
                                                            Tag="{Binding Id}"
                                                            Click="DeleteCategory_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource ErrorBrush}"
                                                            Foreground="White"
                                                            Margin="8,0,0,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Delete"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Уд."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Бренды -->
            <TabItem Header="Бренды" Style="{StaticResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поиск для брендов -->
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Поиск брендов"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="BrandSearchTextBox"
                                         TextChanged="BrandSearchTextBox_TextChanged"
                                         Style="{StaticResource PrimaryTextBox}"
                                         materialDesign:HintAssist.Hint="По названию бренда..."
                                         FontSize="13"
                                         Padding="12,8"
                                         MaxWidth="400"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Добавить"
                                        Click="AddBrand_Click"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,10,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="White"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Добавить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <Button Content="Обновить"
                                        Click="RefreshBrands_Click"
                                        Style="{StaticResource SecondaryButton}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Refresh"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="{StaticResource PrimaryBrush}"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Обновить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Таблица брендов -->
                    <Border Grid.Row="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Статистика -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource LightGrayBrush}"
                                    Padding="12"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <TextBlock x:Name="BrandsStatsText"
                                           Text="Загрузка данных..."/>
                            </Border>

                            <DataGrid Grid.Row="1"
                                      x:Name="BrandsGrid"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      AutoGeneratingColumn="BrandsGrid_AutoGeneratingColumn">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Название" 
                                                        Binding="{Binding Name}" 
                                                        Width="*"/>

                                    <DataGridTemplateColumn Header="Действия" 
                                                            Width="160"
                                                            IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center">
                                                    <Button Content="Ред."
                                                            Tag="{Binding Id}"
                                                            Click="EditBrand_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource PrimaryBrush}"
                                                            Foreground="White">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Pencil"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Ред."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Content="Уд."
                                                            Tag="{Binding Id}"
                                                            Click="DeleteBrand_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource ErrorBrush}"
                                                            Foreground="White"
                                                            Margin="8,0,0,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Delete"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Уд."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Теги -->
            <TabItem Header="Теги" Style="{StaticResource ModernTabItemStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель инструментов -->
                    <Border Grid.Row="0"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Margin="0,0,0,15"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Поиск для тегов -->
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Поиск тегов"
                                           FontSize="12"
                                           FontWeight="Medium"
                                           Foreground="{StaticResource SecondaryTextBrush}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="TagSearchTextBox"
                                         TextChanged="TagSearchTextBox_TextChanged"
                                         Style="{StaticResource PrimaryTextBox}"
                                         materialDesign:HintAssist.Hint="По названию тега..."
                                         FontSize="13"
                                         Padding="12,8"
                                         MaxWidth="400"/>
                            </StackPanel>

                            <!-- Кнопки -->
                            <StackPanel Grid.Column="1" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Content="Добавить"
                                        Click="AddTag_Click"
                                        Style="{StaticResource PrimaryButton}"
                                        Margin="0,0,10,0">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="White"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Добавить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>

                                <Button Content="Обновить"
                                        Click="RefreshTags_Click"
                                        Style="{StaticResource SecondaryButton}">
                                    <Button.ContentTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Refresh"
                                                                         Width="18"
                                                                         Height="18"
                                                                         Foreground="{StaticResource PrimaryBrush}"
                                                                         Margin="0,0,6,0"/>
                                                <TextBlock Text="Обновить"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </Button.ContentTemplate>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Таблица тегов -->
                    <Border Grid.Row="1"
                            Background="White"
                            CornerRadius="8"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            Padding="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Статистика -->
                            <Border Grid.Row="0"
                                    Background="{StaticResource LightGrayBrush}"
                                    Padding="12"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,0,1">
                                <TextBlock x:Name="TagsStatsText"
                                           Text="Загрузка данных..."/>
                            </Border>

                            <DataGrid Grid.Row="1"
                                      x:Name="TagsGrid"
                                      Style="{StaticResource ModernDataGridStyle}"
                                      AutoGeneratingColumn="TagsGrid_AutoGeneratingColumn">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" 
                                                        Binding="{Binding Id}" 
                                                        Width="60"/>

                                    <DataGridTextColumn Header="Название" 
                                                        Binding="{Binding Name}" 
                                                        Width="*"/>

                                    <DataGridTemplateColumn Header="Действия" 
                                                            Width="160"
                                                            IsReadOnly="True">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" 
                                                            HorizontalAlignment="Center">
                                                    <Button Content="Ред."
                                                            Tag="{Binding Id}"
                                                            Click="EditTag_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource PrimaryBrush}"
                                                            Foreground="White">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Pencil"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Ред."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>

                                                    <Button Content="Уд."
                                                            Tag="{Binding Id}"
                                                            Click="DeleteTag_Click"
                                                            Style="{StaticResource ActionButtonStyle}"
                                                            Background="{StaticResource ErrorBrush}"
                                                            Foreground="White"
                                                            Margin="8,0,0,0">
                                                        <Button.ContentTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="Delete"
                                                                                             Width="14"
                                                                                             Height="14"
                                                                                             Foreground="White"
                                                                                             Margin="0,0,4,0"/>
                                                                    <TextBlock Text="Уд."
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </Button.ContentTemplate>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Кнопка возврата внизу -->
        <Button Grid.Row="2"
                Content="Вернуться к товарам"
                Style="{StaticResource PrimaryButton}"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Padding="20,10"
                FontSize="13"
                Click="Back_Click"/>
    </Grid>
</Page>